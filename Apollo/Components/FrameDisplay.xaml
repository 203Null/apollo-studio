<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.Components.FrameDisplay"
             xmlns:Components="clr-namespace:Apollo.Components">
  
  <StackPanel HorizontalAlignment="Stretch">
    <StackPanel Margin="3 0 0 0" Orientation="Horizontal" Spacing="2">
      <Components:Remove VerticalAlignment="Center" x:Name="Remove" Removed="Frame_Remove" />
      <Components:FrameThumbnail x:Name="Frame" Clicked="Clicked" />
    </StackPanel>

    <Components:VerticalAdd Added="Frame_Add" x:Name="FrameAdd" />
  </StackPanel>
</UserControl>