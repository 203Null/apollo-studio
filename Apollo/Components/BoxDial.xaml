<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.Components.BoxDial">

  <Grid RowDefinitions="Auto,Auto" HorizontalAlignment="Center" LayoutUpdated="LayoutChanged">
    <TextBlock Grid.Row="0" VerticalAlignment="Center" x:Name="Title" />

    <Grid Grid.Row="1" ColumnDefinitions="Auto,Auto" HorizontalAlignment="Center">
      <Canvas Grid.Column="0" Margin="0 0 5 0" VerticalAlignment="Center" Width="43" Height="39" Background="Transparent" Cursor="Hand" x:Name="ArcCanvas"
              PointerPressed="MouseDown" PointerReleased="MouseUp" PointerMoved="MouseMove">
        <Path Stroke="{DynamicResource ThemeControlLowBrush}" x:Name="ArcBase" />
        <Path Stroke="{DynamicResource ThemeAccentBrush}" x:Name="Arc" />
      </Canvas>

      <TextBlock Grid.Column="1" VerticalAlignment="Center" x:Name="Display" PointerPressed="DisplayPressed" />

      <TextBox Grid.Column="1" Background="{DynamicResource ThemeControlMidBrush}" BorderThickness="0 0 0 1" Opacity="0" IsHitTestVisible="false" VerticalAlignment="Center" Padding="1" x:Name="Input"
               LostFocus="Input_LostFocus" KeyDown="Input_KeyDown" KeyUp="Input_KeyUp" PointerReleased="Input_MouseUp" />
    </Grid>
  </Grid>
</UserControl>