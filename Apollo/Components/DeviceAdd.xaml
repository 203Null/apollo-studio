<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.Components.DeviceAdd">

  <UserControl.Styles>
    <Style Selector="Grid.collapsible">
      <Setter Property="Width" Value="3" />
    </Style>
    <Style Selector="Grid.collapsible[IsPointerOver=false]">
      <Style.Animations>
        <Animation Duration="0:0:0.1" FillMode="Forward">
          <KeyFrame Cue="100%">
            <Setter Property="Width" Value="3" />
          </KeyFrame>
        </Animation>
      </Style.Animations>
    </Style>
    <Style Selector="Grid.collapsible[IsPointerOver=true]">
      <Style.Animations>
        <Animation Duration="0:0:0.3" FillMode="Forward">
          <KeyFrame Cue="66%">
            <Setter Property="Width" Value="3" />
          </KeyFrame>
          <KeyFrame Cue="100%">
            <Setter Property="Width" Value="26" />
          </KeyFrame>
        </Animation>
      </Style.Animations>
    </Style>
  </UserControl.Styles>

  <Grid ColumnDefinitions="5,Auto,5" Background="Transparent" x:Name="Root" Classes="collapsible">
    <Canvas Grid.Column="1" HorizontalAlignment="Left" Width="16" Height="16" Background="Transparent" ClipToBounds="true" x:Name="Icon" PointerReleased="Click">
      <Canvas.ContextMenu>
        <ContextMenu>
          <MenuItem Header="Group" />
          <MenuItem Header="Copy" />
          <MenuItem Header="Delay" />
          <MenuItem Header="Fade" />
          <MenuItem Header="KeyFilter" />
          <MenuItem Header="Hold" />
          <MenuItem Header="Layer" />
          <MenuItem Header="Move" />
          <MenuItem Header="Override" />
          <MenuItem Header="PageFilter" />
          <MenuItem Header="PageSwitch" />
          <MenuItem Header="Paint" />
          <MenuItem Header="Preview" />
        </ContextMenu>
      </Canvas.ContextMenu>

      <Path Stroke="{DynamicResource ThemeForegroundBrush}" StrokeThickness="2"
            Data="M 0,8 L 16,8 M 8,0 L 8,16" />
    </Canvas>
  </Grid>
</UserControl>