<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.Components.ChainAdd">

  <UserControl.Styles>
    <Style Selector="Grid.collapsible">
      <Setter Property="Height" Value="2" />
      <Setter Property="Transitions">
        <Transitions>
          <DoubleTransition Property="Height" Duration="0:0:0.1" />
        </Transitions>
      </Setter>
    </Style>
    <Style Selector="Grid.collapsible:pointerover">
      <Setter Property="Height" Value="22" />
    </Style>
  </UserControl.Styles>

  <Grid RowDefinitions="5,Auto,5" Background="Transparent" x:Name="Root" Classes="collapsible">
    <Canvas Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="12" Height="12" Background="Transparent" ClipToBounds="true" x:Name="Icon" PointerReleased="Clicked">
      <Path Stroke="{DynamicResource ThemeForegroundBrush}" StrokeThickness="2"
            Data="M 0,6 L 12,6 M 6,0 L 6,12" />
    </Canvas>
  </Grid>
</UserControl>