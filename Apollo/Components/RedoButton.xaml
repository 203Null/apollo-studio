<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.Components.RedoButton">

  <UserControl.Resources>
    <SolidColorBrush x:Key="CanvasBrush" />
  </UserControl.Resources>

  <Canvas HorizontalAlignment="Center" Width="16" Height="16" Background="Transparent" x:Name="Icon" PointerReleased="Click">
    <Path Stroke="{DynamicResource CanvasBrush}" StrokeThickness="2"
          Data="M 12.95,3.05 A 7,7 270 1 0 12.95,12.95" />
    <Path Fill="{DynamicResource CanvasBrush}"
          Data="M 16,0 L 10,6 16,6 Z" />
  
  </Canvas>
</UserControl>