<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="2*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0" x:Name="Title" />

    <Canvas Grid.Row="1" Width="43" Background="Transparent" x:Name="ArcCanvas"
            PointerPressed="MouseDown" PointerReleased="MouseUp" PointerMoved="MouseMove">
      <Path Stroke="#0A0A0A" x:Name="ArcBase" />
      <Path Stroke="#0288D1" x:Name="Arc" />
    </Canvas>

    <TextBlock Grid.Row="2" x:Name="Display" />
  </Grid>
</UserControl>