<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Grid RowDefinitions="Auto,Auto,Auto" VerticalAlignment="Center">
    <TextBlock Grid.Row="0" HorizontalAlignment="Center" x:Name="Title" />

    <Canvas Grid.Row="1" Margin="0 5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="43" Height="39" Background="Transparent" x:Name="ArcCanvas"
            PointerPressed="MouseDown" PointerReleased="MouseUp" PointerMoved="MouseMove">
      <Path Stroke="#161616" x:Name="ArcBase" />
      <Path Stroke="#0288D1" x:Name="Arc" />
    </Canvas>

    <TextBlock Grid.Row="2" HorizontalAlignment="Center" x:Name="Display" />
  </Grid>
</UserControl>