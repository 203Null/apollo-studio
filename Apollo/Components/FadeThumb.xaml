<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.Components.FadeThumb">
  
  <Thumb Width="14" x:Name="Thumb" Height="18" Foreground="#00FFFFFF"
         DragStarted="DragStarted" DragCompleted="DragCompleted" PointerReleased="MouseUp" DragDelta="MouseMove">
    <Thumb.Template>
      <ControlTemplate TargetType="Thumb">
        <Canvas Background="Transparent">
          <Path Fill="{TemplateBinding Foreground}"
                Data="M 0,0 L 0,12 7,18 14,12 14,0 Z" />
          <Path Fill="#FF000000"
                Data="M 1,1 L 1,11 7,17 13,11 13,1 Z" />
          <Path Fill="#FFFFFFFF"
                Data="M 2,2 L 2,10 7,16 12,10 12,2 Z" />
          <Path Fill="{TemplateBinding Background}"
                Data="M 3,3 L 3,9 7,15 11,9 11,3 Z" />
        </Canvas>
      </ControlTemplate>
    </Thumb.Template>
  </Thumb>
</UserControl>