<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.Components.TrackAdd">

  <UserControl.Styles>
    <Style Selector="Grid.collapsible">
      <Setter Property="Height" Value="3" />
    </Style>
    <Style Selector="Grid.collapsible[IsPointerOver=false]">
      <Style.Animations>
        <Animation Duration="0:0:0.1" FillMode="Forward">
          <KeyFrame Cue="100%">
            <Setter Property="Height" Value="3" />
          </KeyFrame>
        </Animation>
      </Style.Animations>
    </Style>
    <Style Selector="Grid.collapsible[IsPointerOver=true]">
      <Style.Animations>
        <Animation Duration="0:0:0.3" FillMode="Forward">
          <KeyFrame Cue="66%">
            <Setter Property="Height" Value="3" />
          </KeyFrame>
          <KeyFrame Cue="100%">
            <Setter Property="Height" Value="26" />
          </KeyFrame>
        </Animation>
      </Style.Animations>
    </Style>
  </UserControl.Styles>

  <Grid RowDefinitions="5,Auto,5" Background="Transparent" x:Name="Root" Classes="collapsible">
    <Canvas Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="16" Height="16" Background="Transparent" ClipToBounds="true" x:Name="Icon" PointerReleased="Clicked">
      <Path Stroke="{DynamicResource ThemeForegroundBrush}" StrokeThickness="2"
            Data="M 0,8 L 16,8 M 8,0 L 8,16" />
    </Canvas>
  </Grid>
</UserControl>