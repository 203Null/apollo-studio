<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.Components.CopyOffset"
             xmlns:Components="clr-namespace:Apollo.Components"
             DetachedFromVisualTree="Unloaded">
  
  <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Stretch" MaxHeight="223">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Spacing="5">
      <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="3 0 0 0">
        <Components:MoveDial x:Name="Offset" Title="Offset" />
        <Components:Remove VerticalAlignment="Top" Margin="0 5 0 0" Clicked="Offset_Remove" />
      </StackPanel>
      <Components:Dial Title="Angle" x:Name="OffsetAngle" Minimum="-180" Maximum="180" Exponent="1" Round="0" Unit="°" Centered="true" ValueChanged="Angle_Changed"/>
    </StackPanel>

    <Components:HorizontalAdd Added="Offset_Add" />
  </StackPanel>
</UserControl>