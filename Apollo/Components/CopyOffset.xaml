<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.Components.CopyOffset"
             xmlns:Components="clr-namespace:Apollo.Components">
  
  <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Stretch" MaxHeight="223">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="3 0 0 0">
      <Components:MoveDial x:Name="Offset" Title="Offset" />
      <Components:Remove VerticalAlignment="Top" Margin="0 5 0 0" Removed="Offset_Remove" />
    </StackPanel>

    <Components:HorizontalAdd Added="Offset_Add" />
  </StackPanel>
</UserControl>