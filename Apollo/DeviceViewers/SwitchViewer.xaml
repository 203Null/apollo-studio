<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.DeviceViewers.SwitchViewer"
             xmlns:Components="clr-namespace:Apollo.Components"
             Margin="10 5"
             DetachedFromVisualTree="Unloaded">
  
  <StackPanel Orientation="Vertical" VerticalAlignment="Center">
    <Components:Dial x:Name="Target" Title="Macro" Minimum="1" Maximum="4" Default="1" Exponent="1" Round="0" Unit="" FillStart="false"
                   ValueChanged="Target_Changed" />
    <Components:Dial x:Name="Value" Title="Value" Minimum="1" Maximum="100" Default="1" Exponent="1" Round="0" Unit="" FillStart="false"
                   ValueChanged="Value_Changed" />
  </StackPanel>
  
</UserControl>