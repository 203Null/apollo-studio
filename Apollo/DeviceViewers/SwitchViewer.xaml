<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.DeviceViewers.SwitchViewer"
             xmlns:Components="clr-namespace:Apollo.Components"
             Margin="10 5"
             DetachedFromVisualTree="Unloaded">
  
  <StackPanel VerticalAlignment="Center">
    <Components:Dial VerticalAlignment="Center" x:Name="Page" Title="Page" Minimum="1" Maximum="100" Default="1" Exponent="1" Round="0" Unit=""
                     ValueChanged="Page_Changed" />

    <CheckBox Margin="0 5 0 0" HorizontalAlignment="Center" x:Name="MultiReset" Click="MultiReset_Changed">Reset</CheckBox>
  </StackPanel>
</UserControl>