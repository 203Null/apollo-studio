<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.Viewers.LaunchpadInfo"
             xmlns:Components="clr-namespace:Apollo.Components">
  
  <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center" Margin="5 0">
    <TextBlock Grid.Column="0" VerticalAlignment="Center" x:Name="Name" />

    <Components:Popout Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" x:Name="Popout" Clicked="Launchpad_Popout" />

    <ComboBox Grid.Column="2" VerticalAlignment="Center" BorderThickness="0" x:Name="InputFormatSelector" SelectionChanged="InputFormat_Changed">
      <ComboBoxItem>XY Layout</ComboBoxItem>
      <ComboBoxItem>Drum Rack</ComboBoxItem>
    </ComboBox>
  </Grid>
</UserControl>