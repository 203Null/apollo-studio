<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.Viewers.LaunchpadInfo"
             xmlns:Components="clr-namespace:Apollo.Components">
  
  <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center" Margin="5 0">
    <TextBlock Grid.Column="0" VerticalAlignment="Center" x:Name="Name" />

    <ComboBox Grid.Column="1" VerticalAlignment="Center" BorderThickness="0" x:Name="InputFormatSelector" SelectionChanged="InputFormat_Changed">
      <ComboBoxItem>XY Layout</ComboBoxItem>
      <ComboBoxItem>Drum Rack</ComboBoxItem>
    </ComboBox>
  </Grid>
</UserControl>