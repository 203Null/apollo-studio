<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.Viewers.TrackInfo"
             xmlns:Components="clr-namespace:Apollo.Components">
  
  <UserControl.Resources>
    <SolidColorBrush x:Key="BackgroundBrush" />
    
    <ContextMenu x:Key="TrackContextMenu" Cursor="Arrow">
      <MenuItem Header="Rename" />
      <MenuItem Header="Cut" />
      <MenuItem Header="Copy" />
      <MenuItem Header="Duplicate" />
      <MenuItem Header="Paste" />
      <MenuItem Header="Delete" />
    </ContextMenu>
  </UserControl.Resources>

  <StackPanel VerticalAlignment="Stretch">
    <Border BorderBrush="{DynamicResource ThemeBorderMidBrush}" Background="{DynamicResource BackgroundBrush}" BorderThickness="1" CornerRadius="5" DragDrop.AllowDrop="true" x:Name="DropZone">
      <Grid ColumnDefinitions="Auto,*,Auto" Margin="5 5" MinHeight="24">
        <Components:Remove Grid.Column="0" Margin="0 0 5 0" VerticalAlignment="Center" Removed="Track_Remove" />
        <TextBlock Grid.Column="1" Background="Transparent" VerticalAlignment="Center" x:Name="Draggable" PointerPressed="Drag" />
        <ComboBox Grid.Column="2" BorderThickness="0" x:Name="PortSelector" SelectionChanged="Port_Changed" />
      </Grid>
    </Border>

    <Components:TrackAdd TrackAdded="Track_Add" TrackAction="Track_Action" DragDrop.AllowDrop="true" x:Name="DropZoneAfter" />
  </StackPanel>
</UserControl>