<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.Viewers.TrackInfo"
             xmlns:Components="clr-namespace:Apollo.Components">
  
  <StackPanel VerticalAlignment="Stretch">
    <Border BorderBrush="{DynamicResource ThemeBorderMidBrush}" Background="{DynamicResource ThemeControlHighBrush}" BorderThickness="1" CornerRadius="5">
      <Grid ColumnDefinitions="Auto,*,Auto" Margin="5 5" MinHeight="24">
        <Components:Remove Grid.Column="0" Margin="0 0 5 0" VerticalAlignment="Center" Removed="Track_Remove" />
        <TextBlock Grid.Column="1" VerticalAlignment="Center" Cursor="Hand" x:Name="Name" PointerReleased="Clicked" />
        <ComboBox Grid.Column="2" BorderThickness="0" x:Name="PortSelector" SelectionChanged="Port_Changed" />
      </Grid>
    </Border>

    <Components:TrackAdd TrackAdded="Track_Add" x:Name="TrackAdd" />
  </StackPanel>
</UserControl>