<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Components="clr-namespace:Apollo.Components">
  
  <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Stretch" x:Name="Root" MaxHeight="223">
    <Border BorderBrush="{DynamicResource ThemeBorderMidBrush}" Background="{DynamicResource ThemeControlHighBrush}" BorderThickness="1" CornerRadius="5" x:Name="Border">
      <Grid RowDefinitions="Auto,*">
        <Border Grid.Row="0" BorderBrush="{DynamicResource ThemeBorderHighBrush}" Background="{DynamicResource ThemeControlLowBrush}" BorderThickness="0 0 0 1">
          <Grid ColumnDefinitions="*,Auto" Margin="5 4">
            <TextBlock Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" x:Name="Title" />

            <Components:Remove Grid.Column="1" Margin="5 0 0 0" VerticalAlignment="Center" Removed="Device_Remove" />
          </Grid>
        </Border>

        <Grid Grid.Row="1" x:Name="Contents" Margin="10 5" />
      </Grid>
    </Border>

    <Components:DeviceAdd DeviceAdded="Device_Add" />
  </StackPanel>
</UserControl>