<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.Viewers.DeviceViewer"
             xmlns:Components="clr-namespace:Apollo.Components">
  
  <StackPanel Orientation="Horizontal" MaxHeight="223" HorizontalAlignment="Center" VerticalAlignment="Stretch" DragDrop.AllowDrop="true" x:Name="Root">
    <Border BorderBrush="{DynamicResource ThemeBorderMidBrush}" Background="{DynamicResource ThemeControlHighBrush}" BorderThickness="1" CornerRadius="5" x:Name="Border">
      <Grid RowDefinitions="Auto,*">
        <Border Grid.Row="0" BorderBrush="{DynamicResource ThemeBorderHighBrush}" Background="{DynamicResource ThemeControlLowBrush}" BorderThickness="0 0 0 1">
          <Grid ColumnDefinitions="*,Auto" Margin="5 4">
            <Grid Grid.Column="0" Background="Transparent" x:Name="Draggable">
              <TextBlock Margin="0 0 2 0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" x:Name="Title" />
            </Grid>

            <Components:Remove Grid.Column="1" VerticalAlignment="Center" Removed="Device_Remove" />
          </Grid>
        </Border>

        <Grid Grid.Row="1" x:Name="Contents" Margin="10 5" />
      </Grid>
    </Border>

    <Components:DeviceAdd DeviceAdded="Device_Add" />
  </StackPanel>
</UserControl>