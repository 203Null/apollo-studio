<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Components="clr-namespace:Apollo.Components">
  
  <Border BorderBrush="#121212" Background="#202020" BorderThickness="1" CornerRadius="5">
    <Grid Margin="5 5">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <TextBlock Grid.Column="0" x:Name="Name" PointerReleased="Clicked" />
      <TextBlock Grid.Column="1" HorizontalAlignment="Right" Text="Port Selector" />
    </Grid>
  </Border>
</UserControl>