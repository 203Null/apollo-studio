<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Components="clr-namespace:Apollo.Components">
  
  <Border BorderBrush="{DynamicResource ThemeBorderMidBrush}" Background="{DynamicResource ThemeControlHighBrush}" BorderThickness="1" CornerRadius="5">
    <Grid ColumnDefinitions="Auto,*" Margin="5 5">
      <TextBlock Grid.Column="0" x:Name="Name" PointerReleased="Clicked" />
      <TextBlock Grid.Column="1" HorizontalAlignment="Right" Text="[Port Selector Placeholder]" />
    </Grid>
  </Border>
</UserControl>