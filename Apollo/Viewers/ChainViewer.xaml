<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.Viewers.ChainViewer"
             xmlns:Components="clr-namespace:Apollo.Components">
  
  <Grid x:Name="Root">
    <Grid ColumnDefinitions="*,Auto,*" x:Name="Layout">
      <Grid Grid.Column="0" HorizontalAlignment="Stretch" Background="Transparent" DragDrop.AllowDrop="true" x:Name="DropZoneBefore" />

      <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="Contents">
        <Components:DeviceAdd AlwaysShowing="true" DeviceAdded="Device_InsertStart" DragDrop.AllowDrop="true" x:Name="DeviceAdd" />
      </StackPanel>

      <Grid Grid.Column="2" HorizontalAlignment="Stretch" Background="Transparent" DragDrop.AllowDrop="true" x:Name="DropZoneAfter" />
    </Grid>
  </Grid>
</UserControl>