<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Components="clr-namespace:Apollo.Components">
  
  <StackPanel VerticalAlignment="Stretch">
    <Border BorderBrush="{DynamicResource ThemeBorderMidBrush}" Background="{DynamicResource ThemeControlHighBrush}" BorderThickness="1" CornerRadius="5">
      <Grid ColumnDefinitions="Auto,*,Auto" Margin="5 5" MinHeight="24">
        <Components:Remove Grid.Column="0" Margin="0 0 5 0" VerticalAlignment="Center" Removed="Chain_Remove" />
        <TextBlock Grid.Column="1" VerticalAlignment="Center" x:Name="Name" PointerReleased="Clicked" />
      </Grid>
    </Border>

    <Components:ChainAdd ChainAdded="Chain_Add" />
  </StackPanel>
</UserControl>