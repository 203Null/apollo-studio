<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Application.Styles>
    <StyleInclude Source="resm:Avalonia.Themes.Default.DefaultTheme.xaml?assembly=Avalonia.Themes.Default" />
    <StyleInclude Source="resm:Apollo.Core.Theme.xaml" />

    <Style Selector="Window">
      <Setter Property="HasSystemDecorations" Value="false" />
    </Style>

    <Style Selector="Button:pointerover /template/ ContentPresenter">
      <Setter Property="BorderBrush" Value="{DynamicResource ThemeForegroundLowBrush}"/>
    </Style>

    <Style Selector="Button:pressed  /template/ ContentPresenter">
      <Setter Property="Background" Value="{DynamicResource ThemeForegroundLowBrush}"/>
    </Style>

    <Style Selector="CheckBox:pointerover /template/ Border#border">
      <Setter Property="BorderBrush" Value="{DynamicResource ThemeForegroundLowBrush}"/>
    </Style>
  </Application.Styles>
</Application>