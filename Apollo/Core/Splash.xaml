<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Apollo Studio" Background="#101010" HasSystemDecorations="false" WindowStartupLocation="CenterScreen" Width="320" Height="320">

  <Border Padding="10">
    <StackPanel>
      <Image x:Name="Logo" Height="260" />
      <Grid ColumnDefinitions="*,*" Margin="0 10 0 0">
        <Button Grid.Column="0" Margin="0 0 5 0" Content="New Project" Click="New_Click" />
        <Button Grid.Column="1" Margin="5 0 0 0" Content="Open Project" Click="Open_Click" />
      </Grid>
    </StackPanel>
  </Border>
</Window>