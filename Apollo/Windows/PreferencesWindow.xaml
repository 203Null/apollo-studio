<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Apollo.Windows.PreferencesWindow"
        xmlns:Components="clr-namespace:Apollo.Components"
        Title="Preferences" WindowStartupLocation="CenterOwner"
        Icon="/Resources/WindowIcon.png"
        Width="350" MinWidth="350" MaxWidth="350"
        Height="630" MinHeight="630" MaxHeight="630"
        Opened="Loaded" Closing="Unloaded">
  
  <Grid RowDefinitions="Auto,*">
    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Background="{DynamicResource ThemeBorderMidBrush}">
      <Grid Grid.Column="0" Background="Transparent" PointerPressed="MoveWindow">
        <TextBlock Margin="0 7" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Preferences" />
      </Grid>

      <Components:Close Grid.Column="1" Margin="5 5" Clicked="Close" />
    </Grid>
    
    <Border Grid.Row="1" BorderBrush="{DynamicResource ThemeBorderMidBrush}" BorderThickness="1 0 1 1">
      <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto,Auto" Margin="10 5">
        <Border Grid.Row="0" BorderBrush="{DynamicResource ThemeBorderHighBrush}" Padding="0 0 0 5" BorderThickness="0 0 0 1">
          <StackPanel Spacing="5">
            <TextBlock Foreground="{DynamicResource ThemeControlHighlightMidBrush}" Text="Appearance" />
            <CheckBox Click="AlwaysOnTop_Changed" x:Name="AlwaysOnTop">Always on Top</CheckBox>
            <CheckBox Click="CenterTrackContents_Changed" x:Name="CenterTrackContents">Center Track Contents</CheckBox>
          </StackPanel>
        </Border>

        <Border Grid.Row="1" BorderBrush="{DynamicResource ThemeBorderHighBrush}" Padding="0 5" BorderThickness="0 0 0 1">
          <StackPanel Spacing="5">
            <TextBlock Foreground="{DynamicResource ThemeControlHighlightMidBrush}" Text="Chain Editor" />
            <CheckBox Click="AutoCreateKeyFilter_Changed" x:Name="AutoCreateKeyFilter">Auto create KeyFilter in new Group Chain</CheckBox>
            <CheckBox Click="AutoCreatePageFilter_Changed" x:Name="AutoCreatePageFilter">Auto create PageFilter in new Group Chain</CheckBox>
          </StackPanel>
        </Border>

        <Border Grid.Row="2" BorderBrush="{DynamicResource ThemeBorderHighBrush}" Padding="0 5" BorderThickness="0 0 0 1">
          <StackPanel Spacing="5">
            <TextBlock Foreground="{DynamicResource ThemeControlHighlightMidBrush}" Text="Pattern Editor" />
            <CheckBox Click="CopyPreviousFrame_Changed" x:Name="CopyPreviousFrame">Copy previous Frame when adding a new Frame</CheckBox>
            <CheckBox Click="CaptureLaunchpad_Changed" x:Name="CaptureLaunchpad">Capture Launchpad when opening Editor</CheckBox>
            <CheckBox Click="EnableGestures_Changed" x:Name="EnableGestures">Enable on-Launchpad Gestures</CheckBox>
            <Button Background="{DynamicResource ThemeControlHighBrush}"  HorizontalAlignment="Center" Content="Clear Color History" Click="ClearColorHistory" />
          </StackPanel>
        </Border>

        <Border Grid.Row="3" BorderBrush="{DynamicResource ThemeBorderHighBrush}" Padding="0 5" BorderThickness="0 0 0 1">
          <StackPanel Spacing="5">
            <TextBlock Foreground="{DynamicResource ThemeControlHighlightMidBrush}" Text="Processing" />
            <StackPanel Orientation="Horizontal" Spacing="10">
              <TextBlock Text="Fade Smoothness" />
              <Slider Width="100" Minimum="0" Maximum="1" x:Name="FadeSmoothness" />
            </StackPanel>
          </StackPanel>
        </Border>

        <Border Grid.Row="4" BorderBrush="{DynamicResource ThemeBorderHighBrush}" Padding="0 5" BorderThickness="0 0 0 1">
          <Grid RowDefinitions="Auto,*">
            <TextBlock Grid.Row="0" Foreground="{DynamicResource ThemeControlHighlightMidBrush}" Text="Launchpad Configuration" />
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto">
              <StackPanel x:Name="Contents">
                <Components:VerticalAdd AlwaysShowing="true" Added="Launchpad_Add" />
              </StackPanel>
            </ScrollViewer>
          </Grid>
        </Border>

        <Border Grid.Row="5" BorderBrush="{DynamicResource ThemeBorderHighBrush}" Padding="0 5" BorderThickness="0 0 0 1">
          <StackPanel Spacing="5">
            <TextBlock Foreground="{DynamicResource ThemeControlHighlightMidBrush}" Text="Discord Rich Presence" />
            <CheckBox Click="DiscordPresence_Changed" x:Name="DiscordPresence">Enable Discord Rich Presence</CheckBox>
            <CheckBox Click="DiscordFilename_Changed" x:Name="DiscordFilename">Display Project Name</CheckBox>
          </StackPanel>
        </Border>

        <StackPanel Grid.Row="6" Margin="10" HorizontalAlignment="Center">
          <TextBlock TextAlignment="Center" Text="Apollo Studio / " x:Name="Version" />
          <TextBlock TextAlignment="Center" Text="2018 - 2019 mat1jaczyyy" />
        </StackPanel>
      </Grid>
    </Border>
  </Grid>
</Window>