<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Components="clr-namespace:Apollo.Components"
        Title="Project" WindowStartupLocation="CenterScreen" Width="548" Height="274" MinWidth="548" MinHeight="274"
        Closed="Unloaded">
  
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    
    <Grid Grid.Row="0" Background="#121212">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>

      <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5 5" Spacing="5">
        <Components:PreferencesButton />
        <Components:Save />
      </StackPanel>

      <Grid Grid.Column="1" Background="Transparent" PointerPressed="MoveWindow">
        <TextBlock Margin="0 7" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Project" x:Name="Title" />
      </Grid>

      <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="5 5" Spacing="5">
        <Components:Minimize Click="Minimize" />
        <Components:Close Click="Close" />
      </StackPanel>
    </Grid>
    
    <Border Grid.Row="1" BorderBrush="#121212" BorderThickness="1 0 1 1">
      <ScrollViewer Padding="5 5" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto">
        <StackPanel x:Name="Contents" />
      </ScrollViewer>
    </Border>
  </Grid>
</Window>