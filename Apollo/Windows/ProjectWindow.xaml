<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Project" WindowStartupLocation="CenterScreen" Width="548" Height="274" MinWidth="548" MinHeight="274"
        Closed="Unloaded">
  
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    
    <Grid Grid.Row="0" Background="#121212">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <Grid Grid.Column="0" Background="Transparent" PointerPressed="MoveWindow">
        <TextBlock Margin="0 7" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Project" x:Name="Title" />
      </Grid>
    </Grid>
    
    <ScrollViewer Grid.Row="1" Padding="5 5" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto">
      <StackPanel x:Name="Contents" />
    </ScrollViewer>
  </Grid>
</Window>