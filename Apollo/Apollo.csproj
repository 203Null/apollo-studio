<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <RuntimeFrameworkVersion>2.1.0</RuntimeFrameworkVersion>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <RuntimeIdentifiers>win10-x64;osx.10.11-x64</RuntimeIdentifiers>
    <LangVersion>7.2</LangVersion>
    <ApplicationIcon>icon.ico</ApplicationIcon>
    <StartupObject>Apollo.Core.Program</StartupObject>
    <Version>0.1.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="App.xaml" />
    <None Remove="Components\Dial.xaml" />
    <None Remove="Resources\WindowIcon.png" />
    <None Remove="Splash.xaml" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\WindowIcon.png" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.7.1-cibuild0001679-beta" />
    <PackageReference Include="Avalonia.Desktop" Version="0.7.1-cibuild0001679-beta" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="RtMidi.Core" Version="1.0.49" />
  </ItemGroup>
  
  <ItemGroup>
    <EmbeddedResource Include="Resources/SplashImage.png" />
  </ItemGroup>
  
  <ItemGroup>
    <Compile Update="**\*.cs">
      <DependentUpon>%(Filename).xaml</DependentUpon>
    </Compile>
    <EmbeddedResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </EmbeddedResource>
    <EmbeddedResource Include="Assets\*" />
  </ItemGroup>
  
  <ItemGroup>
    <EmbeddedResource Update="Components\Dial.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Elements\Track.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Core\Splash.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  
  <ItemGroup>
    <None Update="Core\App.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Core\Splash.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Elements\Track.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
  </ItemGroup>
  
</Project>